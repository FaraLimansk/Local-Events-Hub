@page
@model LEH.Pages.CreateModel
@{
    ViewData["Title"] = "Создать событие";
}

<h2>Создать событие</h2>

<form method="post">
    <div>
        <label>Название</label>
        <input asp-for="Event.Title" class="form-control" />
    </div>
    <div>
        <label>Описание</label>
        <textarea asp-for="Event.Description" class="form-control"></textarea>
    </div>
    <div>
        <label>Дата проведения</label>
        <input asp-for="Event.EventDate" type="datetime-local" class="form-control" />
    </div>
    <div>
        <label>Организатор (ID)</label>
        <input asp-for="Event.OrganizerId" class="form-control" />
    </div>
    <div>
        <label>Макс. участников</label>
        <input asp-for="Event.MaxParticipants" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
