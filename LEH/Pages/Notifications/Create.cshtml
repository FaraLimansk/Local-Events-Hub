@page
@model LEH.Pages.Notifications.CreateModel
@{
    ViewData["Title"] = "Создать уведомление";
}

<div class="container">
    <h2 class="mb-4">Создать уведомление</h2>

    <form method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label asp-for="Notification.UserId" class="form-label">Пользователь (ID)</label>
            <input asp-for="Notification.UserId" class="form-control" required />
            <span asp-validation-for="Notification.UserId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notification.Type" class="form-label">Тип уведомления</label>
            <select asp-for="Notification.Type" class="form-select" required>
                <option value="">Выберите тип</option>
                <option value="Важное">Важное</option>
                <option value="Информационное">Информационное</option>
                <option value="Системное">Системное</option>
            </select>
            <span asp-validation-for="Notification.Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Notification.Message" class="form-label">Сообщение</label>
            <textarea asp-for="Notification.Message" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Notification.Message" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Notification.RelatedOperation" class="form-label">ID операции</label>
                <input asp-for="Notification.RelatedOperation" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Notification.Status" class="form-label">Статус</label>
                <select asp-for="Notification.Status" class="form-select">
                    <option value="unread" selected>Непрочитано</option>
                    <option value="read">Прочитано</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Notification.Comments" class="form-label">Комментарии</label>
            <textarea asp-for="Notification.Comments" class="form-control" rows="2"></textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-2"></i>Сохранить
            </button>
            <a asp-page="Index" class="btn btn-outline-secondary px-4">
                <i class="bi bi-x-circle me-2"></i>Отмена
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Клиентская валидация
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}